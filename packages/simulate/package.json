{
  "name": "@gati-framework/simulate",
  "version": "0.1.2",
  "description": "Runtime simulation for testing Gati applications with in-process Route Manager, LCC, and Module RPC emulation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "gati",
    "simulation",
    "testing",
    "runtime",
    "integration-testing"
  ],
  "author": "Krishna Paul",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krishnapaul242/gati.git",
    "directory": "packages/simulate"
  },
  "peerDependencies": {
    "@gati-framework/core": "^0.4.5",
    "@gati-framework/runtime": "^2.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
