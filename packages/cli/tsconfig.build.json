{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "paths": {
      "@gati-framework/core": ["../core/src"],
      "@gati-framework/runtime": ["../runtime/src"]
    }
  },
    "include": ["src/**/*", "deployment/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/codegen/transformer-generator.ts",
    "src/commands/timescape.ts",
    "src/analyzer/version-detector.ts"
  ]
}
