{
  "name": "@gati-framework/contracts",
  "version": "1.1.0",
  "description": "Type-safe contracts for Gati framework - Core runtime contracts, JSON schemas, and Protobuf definitions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gati-contracts-validate": "./dist/cli/validate.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/validation.d.ts",
      "import": "./dist/utils/validation.js"
    },
    "./observability": {
      "types": "./dist/observability/index.d.ts",
      "import": "./dist/observability/index.js"
    },
    "./deployment": {
      "types": "./dist/deployment/index.d.ts",
      "import": "./dist/deployment/index.js"
    }
  },
  "files": [
    "dist",
    "src/schemas",
    "src/proto",
    "test/fixtures",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run copy:schemas",
    "copy:schemas": "node -e \"require('fs').cpSync('src/schemas', 'dist/schemas', {recursive: true})\"",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "gati",
    "contracts",
    "interfaces",
    "typescript",
    "json-schema",
    "protobuf",
    "validation",
    "api-contracts",
    "runtime",
    "handlers",
    "observability",
    "metrics",
    "tracing",
    "deployment",
    "kubernetes"
  ],
  "author": "Krishna Paul",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
