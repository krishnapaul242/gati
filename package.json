{
  "name": "@gati/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Gati - Motion in Code: Next-gen framework for scalable, versioned, cloud-native Node.js applications",
  "keywords": [
    "framework",
    "cloud-native",
    "kubernetes",
    "api-versioning",
    "typescript",
    "nodejs",
    "serverless",
    "microservices"
  ],
  "homepage": "https://github.com/krishnapaul242/gati#readme",
  "bugs": {
    "url": "https://github.com/krishnapaul242/gati/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krishnapaul242/gati.git"
  },
  "license": "MIT",
  "author": {
    "name": "Krishna Paul",
    "email": "krishnapaulmailbox@gmail.com",
    "url": "https://krishnapaul.in"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "bin": {
    "gati": "./dist/cli/index.js"
  },
  "scripts": {
    "cli": "tsx src/cli/index.ts",
    "dev": "pnpm --filter @gati/core dev",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rimraf dist build coverage .tsbuildinfo",
    "clean:all": "pnpm clean && rimraf node_modules .pnpm-store",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.11.0",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.2",
    "ora": "^9.0.0",
    "prompts": "^2.4.2"
  }
}
