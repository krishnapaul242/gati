# Multi-stage Dockerfile for Gati application
# Generated by Gati deployment system

# Build stage
FROM node:<%= nodeVersion %>-alpine AS builder

# Set working directory
WORKDIR /app

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install pnpm
RUN npm install -g pnpm@8

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

<% if (buildCommand) { %>
# Build application
RUN <%= buildCommand %>
<% } %>

# Production stage
FROM node:<%= nodeVersion %>-alpine

# Set working directory
WORKDIR /app

# Install production dependencies
RUN apk add --no-cache tini

# Create non-root user
RUN addgroup -g 1001 -S gati && \
    adduser -S gati -u 1001

# Install pnpm
RUN npm install -g pnpm@8

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install production dependencies only
RUN pnpm install --prod --frozen-lockfile

# Copy built application from builder
<% if (buildCommand) { %>
COPY --from=builder /app/dist ./dist
<% } else { %>
COPY --from=builder /app/src ./src
<% } %>

<% if (additionalDependencies && additionalDependencies.length > 0) { %>
# Install additional dependencies
RUN apk add --no-cache <%= additionalDependencies.join(' ') %>
<% } %>

# Set ownership
RUN chown -R gati:gati /app

# Switch to non-root user
USER gati

# Expose port
EXPOSE <%= port %>

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node -e "require('http').get('http://localhost:<%= port %>/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Use tini for proper signal handling
ENTRYPOINT ["/sbin/tini", "--"]

# Start application
CMD ["<%= startCommand %>"]
