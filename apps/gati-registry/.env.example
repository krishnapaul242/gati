# Application
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/gati_registry
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=gati-registry

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=gati-registry-artifacts

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret

# Signing & Verification
COSIGN_PUBLIC_KEY_PATH=/path/to/cosign.pub
ENABLE_SIGNATURE_VERIFICATION=true

# Vulnerability Scanning
TRIVY_DB_REPOSITORY=ghcr.io/aquasecurity/trivy-db
MAX_CONCURRENT_SCANS=5

# Billing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
REVENUE_SPLIT_PERCENTAGE=70

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password
NOTIFICATION_FROM_EMAIL=noreply@gati.dev

# Observability
OTEL_ENDPOINT=http://localhost:4318
METRICS_PORT=9090
ENABLE_TRACING=true

# CDN
CDN_URL=https://cdn.gati.dev
CDN_CACHE_TTL=31536000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_UPLOAD_MAX=10
