{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override for production builds
    "sourceMap": false,
    "declarationMap": false,
    "removeComments": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "tests",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*test*.ts",
    "**/*example*.ts",
    "**/__fixtures__/**",
    "examples",
    "docs",
    "scripts"
  ]
}
